#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

arrow() {
  sed -u 's/^/-----> /'
}

BUILD_DIR=$1
CACHE_DIR=$2
ENVFILE=$3
BP_DIR=`cd $(dirname $0); cd ..; pwd`
VENDOR_DIR="$BUILD_DIR/vendor"
EXPORT_PATH="$PWD/export"

function set-default-env() {
  echo "export $1=\$$1:/app/vendor/$2" >> $EXPORT_PATH
}

echo "Installing libvips" | arrow

cd $BUILD_DIR

output_dir="${BUILD_DIR}/vendor/vips"
# Output library also to temp dir accordingly to pkg-config paths
temp_app_dir="/app/vendor/vips"
mkdir -p $output_dir
mkdir -p $temp_app_dir

echo "Downloading libvips and unpacking" | indent
curl -s http://www.vips.ecs.soton.ac.uk/supported/current/vips-8.4.5.tar.gz | tar xz -C $output_dir

if [ $? != 0 ]; then
  echo "Error downloading vips and unpacking to build dir" | indent
  exit 1
fi

curl -s http://www.vips.ecs.soton.ac.uk/supported/current/vips-8.4.5.tar.gz | tar xz -C $temp_app_dir

if [ $? != 0 ]; then
  echo "Error downloading vips and unpacking to app dir" | indent
  exit 1
fi
mkdir -p $BUILD_DIR/bin/
cp -r $output_dir/bin/* $BUILD_DIR/bin/

echo "libvips installed" | indent

#echo "Creating new env var in $3" | indent

echo "\$PKG_CONFIG_PATH:/app/vendor/vips/lib/pkgconfig" > $3/PKG_CONFIG_PATH

#echo "Installing vips .profile.d files" | indent

mkdir -p $BUILD_DIR/.profile.d
cp -n $BP_DIR/.profile.d/* $BUILD_DIR/.profile.d/

#echo ".profile.d files installed" | indent
# source $BUILD_DIR/.profile.d/vips.sh
set-default-env PKG_CONFIG_PATH "vips/lib/pkgconfig"
set-default-env LD_LIBRARY_PATH "vips/lib"
set-default-env LIBRARY_PATH "vips/lib"
set-default-env PATH "vips/lib"

echo "PATH=$PATH" | indent
echo "PKG_CONFIG_PATH=$PKG_CONFIG_PATH" | indent
echo "LD_LIBRARY_PATH=$LD_LIBRARY_PATH" | indent
